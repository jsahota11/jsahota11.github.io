---
import Navbar from "../components/Navbar.astro"
const {title, local} = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<!-- The global font I am using -->
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="/jsahota11.github.io/global.css" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/jsahota11.github.io/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title id="title">{title}</title>
	</head>
	<body>
		<Navbar />
		<div id="title">
			<h1>
				{local}
			</h1>
		</div>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
